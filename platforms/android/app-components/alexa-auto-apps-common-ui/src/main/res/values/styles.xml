<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Alexa.HeadingText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Alexa.Heading1Text" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/heading1_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Alexa.Heading2Text" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/heading2_font_size</item>
    </style>

    <style name="Alexa.Heading3Text" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/heading3_font_size</item>
    </style>

    <style name="Alexa.BodyText" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/body_font_size</item>
    </style>

    <style name="Alexa.SmallBodyText" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/small_body_font_size</item>
    </style>

    <style name="Alexa.HintText" parent="Alexa.HeadingText">
        <item name="android:textColor">?attr/hintColorOnBackground</item>
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Alexa.Hint2Text" parent="Alexa.HeadingText">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Alexa.Button" parent="Alexa.HeadingText">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:background">?attr/shapeAppearanceMediumComponent</item>
        <item name="android:textSize">@dimen/heading3_font_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Alexa.SmallButton" parent="Alexa.Button">
        <item name="android:background">?attr/shapeAppearanceSmallComponent</item>
        <item name="android:textSize">@dimen/small_body_font_size</item>
    </style>

    <style name="Alexa.EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Alexa.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>
</resources>